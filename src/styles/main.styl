@import "../../node_modules/angular-material/angular-material.css"
@import "./material-icons.styl"

contentBg = #F6F6F6

html
  background-color contentBg
  body
    background-color contentBg
  md-content
    background-color contentBg

#header
  padding-top 15px
  height 75px
  color #fff
  background -webkit-linear-gradient(left,#2193b0,#6dd5ed)
  background linear-gradient(to right,#2193b0,#6dd5ed)
  min-height 278px
  margin-bottom -100px
  md-icon
    color #fff
    margin-right 10px

#main-content
  margin-top: 20px

.container
  width: 100%
  max-width 1200px
  margin 0 auto

.category
  background #00BCD4

md-dialog.items
  min-height 400px

.vertical-container
  height 292px
  .repeated
    h3
      font-size: 16px
      font-weight: 400
      letter-spacing: 0.01em
      margin: 0 0 6px 0
      line-height: 0.75em


md-tabs
  background #f6f6f6
  border 1px solid #e1e1e1

  md-tabs-wrapper
    background white